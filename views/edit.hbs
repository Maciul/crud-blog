<form action="/post/{{result.id}}/edit" method="post">
  <label for="username">Name</label>
  <input type='text' name='username' value='{{result.username}}'>
  <label for="title">Title</label>
  <input type='text' name='title' value='{{result.title}}'>
  <label for="content">Post</label>
  <textarea name='content' value='{{result.content}}'>{{result.content}}</textarea>
  <input name='users_id' type='hidden' value='{{result.users_id}}'>
  <button type='submit'>Edit Post</button>
</form>
